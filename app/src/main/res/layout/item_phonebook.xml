<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtNamePhoneBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Trần Hữu Thọ"
        android:textColor="#0A0B0A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/getUserImgPhoneBook"
        app:layout_constraintTop_toTopOf="@+id/getUserImgPhoneBook" />

    <androidx.cardview.widget.CardView
        android:id="@+id/getUserImgPhoneBook"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imgAvatarPhoneBook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/duck"></ImageView>


    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imgInfoPhoneBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtNamePhoneBook"
        app:layout_constraintStart_toEndOf="@+id/txtNamePhoneBook"
        app:layout_constraintTop_toTopOf="@+id/txtNamePhoneBook"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_info" />

    <ImageView
        android:id="@+id/imgActiveStatus"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/getUserImgPhoneBook"
        app:layout_constraintStart_toEndOf="@+id/getUserImgPhoneBook"
        app:layout_constraintTop_toBottomOf="@+id/txtNamePhoneBook"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_activestatus" />

</androidx.constraintlayout.widget.ConstraintLayout>

