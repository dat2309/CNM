<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <Button
        android:id="@+id/btnChangePass"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="76dp"
        android:backgroundTint="@color/blue"
        android:text="Đổi mật khẩu"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumberProfile" />

    <androidx.cardview.widget.CardView
        android:id="@+id/getUserImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imgAvatarProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
        ></ImageView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:text="Họ tên: "
        android:textColor="#0B0A0A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvNameProfile"
        app:layout_constraintEnd_toStartOf="@+id/tvNameProfile"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNameProfile"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Ngày sinh: "
        android:textColor="#040303"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvDateProfile"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/tvDateProfile" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Giới tính:"
        android:textColor="#070707"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvSexProfile"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/tvSexProfile"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Email: "
        android:textColor="#050505"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvEmailProfile"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/tvEmailProfile" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Số điện thoại: "
        android:textColor="#040303"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvPhoneNumberProfile"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/tvPhoneNumberProfile"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnUpdateProfile"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/blue"
        android:text="Cập Nhật Thông tin"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnChangePass"
        app:layout_constraintEnd_toStartOf="@+id/btnChangePass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnChangePass" />

    <TextView
        android:id="@+id/tvNameProfile"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:text="Họ và tên"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getUserImage" />

    <TextView
        android:id="@+id/tvDateProfile"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text="Ngày sinh"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tvNameProfile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvNameProfile"
        app:layout_constraintTop_toBottomOf="@+id/tvNameProfile" />

    <TextView
        android:id="@+id/tvSexProfile"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="Giới tính"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tvDateProfile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvDateProfile"
        app:layout_constraintTop_toBottomOf="@+id/tvDateProfile" />

    <TextView
        android:id="@+id/tvEmailProfile"
        android:layout_width="230dp"
        android:layout_height="31dp"
        android:layout_marginTop="12dp"
        android:text="Email"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tvSexProfile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvSexProfile"
        app:layout_constraintTop_toBottomOf="@+id/tvSexProfile" />

    <TextView
        android:id="@+id/tvPhoneNumberProfile"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text="Số điện thoại"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tvEmailProfile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvEmailProfile"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailProfile" />

    <ImageView
        android:id="@+id/imgReturnProfile"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_keyboard_return_24" />

</androidx.constraintlayout.widget.ConstraintLayout>